<?php

/**
 * @file
 * This module provides a node type called 'Simple Content Type'
 */
/**
 * Implements hook_node_info().
 */
function osa_node_info() {
	// define our content type info
	$items['osa'] = array(
		'name' => t('Simple Content Type'),
		'type' => 'osa',
		'base' => 'osa',
		'description' => t('A simple demonstration content type using different text field types.'),
		'has_title' => '1',
		'title_label' => t('Simple Title'),
		'has_body' => FALSE,
		'help' => t('Please fill in all fields.'),
	);
	
	return $items;
}
/**
 * Implement hook_form() with the standard default form.
 */
function osa_form($node, &$form_state) {
	// get the default values for our form fields
	if (!isset($node->nid))  {
		$txt_field = '';
		$txt_area = '';
		$txt_area_with_format = '';
		$txt_format = 'filtered_html';
	} else  {
		// query the db for info about our node
		$data = db_select('osa_data', 'd')
			->fields('d', array(
				'osa_textfield', 
				'osa_textarea', 
				'osa_text', 
				'osa_format'))
			->condition("d.nid", $node->nid)
			->execute()
			->fetchAssoc();
		
		$txt_field = $data['osa_textfield'];
		$txt_area = $data['osa_textarea'];
		$txt_area_with_format = $data['osa_text'];
		$txt_format = $data['osa_format'];
	}
	// build the form
	$form = array();
	$form['osa_textfield'] = array(
		'#title' => t('Email Address'),
		'#type' => 'textfield',
		'#description' => t('Enter an email address.'),
		'#default_value' => $txt_field,
		'#weight' => -9,
		'#required' => TRUE,
	);
	$form['osa_textarea'] = array(
		'#title' => t('Enter a plain text message.'),
		'#type' => 'textarea',
		'#description' => t('This text area will be sanitized and not run through any filters prior to display.'),
		'#default_value' => $txt_area,
		'#weight' => -8,
		'#rows' => 5,
		'#required' => TRUE,
	);
	$form['osa_text'] = array(
		'#title' => t('Enter some a formatted text message.'),
		'#type' => 'text_format',
		'#description' => t('This text area will be sanitized and run through the designated filter prior to display.'),
		'#default_value' => $txt_area_with_format,
		'#format' => $txt_format,
		'#weight' => -7,
		'#rows' => 10,
		'#required' => TRUE,
	);
	
	return $form;
}
/**
 * Implements hook_node_validate().
 */
function osa_node_validate($node, $form, &$form_state) {
	// if we're not validating one of our own get out of here
	if ($node->type != "osa")  {
		return;
	}
	// Check to see if email address is formatted correctly
	if (isset($node->osa_textfield) && !valid_email_address($node->osa_textfield))  {
		form_set_error('osa_textfield', t('Please enter a valid email address.'), NULL);
	}
}
/**
 * Implement hook_node_insert()
 */
function osa_node_insert($node)  {
	// if we're not inserting one of our own get out of here
	if ($node->type != "osa")  {
		return;
	}
	global $user;
	$nid = $node->nid;
	$uid = $user->uid;
	
	$insert = db_insert('osa_data')
		->fields(array(
			'nid' => $nid,
			'uid' => $uid,
			'osa_textfield' => $node->osa_textfield,
			'osa_textarea' => check_plain($node->osa_textarea),
			'osa_text' => check_markup($node->osa_text['value'], $node->osa_text['format']),
			'osa_format' => $node->osa_text['format'],))
		->execute();
}
/**
 * Implement hook_node_update()
 */
function osa_node_update($node)  {
	// if we're not updating one of our own get out of here
	if ($node->type != "osa")  {
		return;
	}
	
	$update = db_update('osa_data')
		->fields(array(
			'osa_textfield' => $node->osa_textfield,
			'osa_textarea' => check_plain($node->osa_textarea),
			'osa_text' => check_markup($node->osa_text['value'], $node->osa_text['format']),
			'osa_format' => $node->osa_text['format'],
		))
		->condition('nid', $node->nid, '=')
		->execute();
}
/**
 * Implements hook_node_view().
 */
function osa_node_view($node, $view_mode, $langcode) {
	if ($node->type != 'osa')  {
		return;
	}
	// get the data we want to display
	$data = db_select('osa_data', 'd')
		->fields('d', array(
			'uid', 
			'osa_textfield', 
			'osa_textarea', 
			'osa_text'))
		->condition("d.nid", $node->nid)
		->execute()
		->fetchAssoc();
	// fetch the user's name using {osa_data}.uid
	$user_name = db_select('users', 'u')
		->fields('u', array('name'))
		->condition("u.uid", $data['uid'])
		->execute()
		->fetchField();
	
	$txt_field = $data['osa_textfield'];
	$txt_area = $data['osa_textarea'];
	$txt_area_with_format = $data['osa_text'];
	
	// add what we want to the node content area
	$node->content['intro'] = array(
		'#markup' => '<p>This node was created by user ' . $user_name . '. Thanks for your contribution.</p>', 
		'#weight' => -10, 
	);
	$node->content['email'] = array(
		'#markup' => '<p><strong>Example Email:</strong> ' . $txt_field . '</p>', 
		'#weight' => -9, 
	);
	$node->content['plain_text'] = array(
		'#markup' => '<p><strong>The plain text:</strong> ' . $txt_area . '</p>', 
		'#weight' => -8, 
	);
	$node->content['formatted_text'] = array(
		'#markup' => $txt_area_with_format, 
		'#weight' => -7, 
	);
}